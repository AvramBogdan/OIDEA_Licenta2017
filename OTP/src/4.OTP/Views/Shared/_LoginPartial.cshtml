
@if (User.Identity.IsAuthenticated)
{
    <form asp-antiforgery="true" asp-controller="Account" asp-action="Logout" method="post" class="nav-item">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link"><i class="fa fa-user" aria-hidden="true"></i> @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <button class="btn nav-link btn-default" type="submit"> <i class="fa fa-sign-out" aria-hidden="true"></i> Logout </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
